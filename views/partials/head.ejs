        max-height: 80vh;
        display: flex;
        flex-direction: column;
        padding: 50px;
        max-width: 50vw;
        height: fit-content;
        background-color: aliceblue;
        border-radius: 10px;
        gap: 15px;
        overflow-y: auto;
        overflow-x: hidden;
    }

    .top::-webkit-scrollbar {
        width: 5px;
    }

    .top::-webkit-scrollbar-track {
        background: #e6e6e6;
        border-radius: 25px;
    }

    .top::-webkit-scrollbar-thumb {
        background: #f12711;
        border-radius: 25px;
    }




    .form {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 20px;
        max-width: 50vw;
        margin-bottom: 5vh;
    }

    .outline {
        outline: none;
