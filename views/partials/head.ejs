    @import url('https://fonts.googleapis.com/css2?family=Orbitron&family=Poppins&display=swap');

    * {
        font-family: "Poppins", sans-serif;
    }

    body {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        min-height: 100vh;
        background-color: #2362cc;
    }

    #message {
        font-size: 18px;
    }

